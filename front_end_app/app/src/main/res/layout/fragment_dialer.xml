<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <!-- 상단 액션: 저장 / 검색 (아이콘 버튼 느낌) -->
    <LinearLayout
        android:id="@+id/btn_layout_top"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_setting"
            app:iconTint="@android:color/darker_gray"
            android:backgroundTint="@android:color/transparent"
            app:iconPadding="8dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSearch"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_search"
            app:iconTint="@android:color/darker_gray"
            android:backgroundTint="@android:color/transparent"
            app:iconPadding="8dp"
            />
    </LinearLayout>

    <!-- 번호 표시 영역: 큰 숫자 + 라운드 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/numberCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#22FFFFFF"
        app:cardBackgroundColor="#0FFFFFFF"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_layout_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dial_pad"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:textSize="28sp"
            android:gravity="center"
            android:inputType="phone"
            android:focusable="false"
            android:background="@android:color/transparent"
            android:padding="10dp"/>
    </androidx.cardview.widget.CardView>

    <!-- 다이얼 패드: 4x3 -->
    <GridLayout
        android:id="@+id/dial_pad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/numberCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <!-- 숫자 버튼들은 스타일로 통일 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn1"
            style="@style/DialKeyButton"
            android:text="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn2"
            style="@style/DialKeyButton"
            android:text="2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn3"
            style="@style/DialKeyButton"
            android:text="3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn4"
            style="@style/DialKeyButton"
            android:text="4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn5"
            style="@style/DialKeyButton"
            android:text="5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn6"
            style="@style/DialKeyButton"
            android:text="6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn7"
            style="@style/DialKeyButton"
            android:text="7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn8"
            style="@style/DialKeyButton"
            android:text="8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn9"
            style="@style/DialKeyButton"
            android:text="9" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStar"
            style="@style/DialKeyButton"
            android:text="*" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn0"
            style="@style/DialKeyButton"
            android:text="0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHash"
            style="@style/DialKeyButton"
            android:text="#" />
    </GridLayout>

    <!-- 하단 바: 삭제(아이콘) + 통화(큰 원) + 더보기/빈칸 -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:baselineAligned="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDummy"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:backgroundTint="@android:color/transparent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCall"
            style="@style/Widget.Material3.Button"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:paddingLeft="32dp"
            app:cornerRadius="43dp"
            android:backgroundTint="#2ECC71"
            app:icon="@drawable/ic_phone_call"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            android:text=""
            android:elevation="6dp"
            android:minWidth="0dp"
            android:minHeight="0dp"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:icon="@drawable/ic_backspace"
            app:iconTint="@android:color/darker_gray"
            android:backgroundTint="@android:color/transparent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
